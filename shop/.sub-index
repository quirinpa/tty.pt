#!/bin/sh

shop_source
shop_id="$1"
shift

case "$1" in
	cart) shift; . ./.cart ; exit 0 ;;
	prod) shift; . ./.product ; exit 0 ;;
	edit) shift; . ./.edit ; exit 0;;
	order)
		shift
		cd .order
		. ./index
		exit 0
		;;
	*)
		if test ! -z "$1"; then
			cd .product
			. ./index $shop_id $@
			exit 0
		fi
		;;
esac

lsshown() {
	 find $1 -type d -mindepth 1 -maxdepth 1 -name "[!.]*" | sed "s|$1||" | sed "s/\/$//"
}

Products() {
	local product_id
	while read product_id; do
		local card_class=""

		product_env $product_id

		if test "$product_stock" == "0"; then
			card_class="c0"
		fi

		cat <<!
<a class="card f v8 b0 fic p $card_class" href="/shop/$shop_id/$product_id/">
	`PImage $product_image_path`
	<div class="tsl">$product_priceâ‚¬</div>
	<span class="tsxl">$product_title</span>
	`echo "$product_description" | csurround p`
</a>
!
	done
}

fun() {
	test -z "$REMOTE_USER" && return

	cat <<!
!
	if im $OWNER; then
		cat <<!
<a class="$RB" href="./add/">+</a>
`EditBtn "./edit/"`
<a class="$RB" href="./order/">ðŸšš</a>
<a class="$RB" href="./cart/">ðŸ›’</a>
!
	fi
}

