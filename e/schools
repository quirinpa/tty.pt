#!/bin/ksh

. $DOCUMENT_ROOT/lib/optional-auth.sh
. $DOCUMENT_ROOT/lib/common.sh

case "$REQUEST_METHOD" in
	GET)
		export _TITLE="`_ Schools`"

		if test ! -z "$REMOTE_USER"; then
			export SCHOOL_ADD="<a class=\"$RB\" href=\"/e/school-add\">+</a>"
		fi

		export SCHOOLS="`ls $DOCUMENT_ROOT/schools | BigButtons school`"
		NormalCat
		;;
	*)
		echo "Status: 405 Method Not Allowed"
		echo
		;;
esac


